.count_down{
  display:inline-block;
  position:absolute;
  right:0;
  top:10px;
  color: orange;
  font-weight: 600;
  font-size: 18px;
  width: 100px
}

.back{animation:back 1s linear 1;}
@keyframes back{from{transform: rotateY(-180deg);}  to{transform: rotateY(0deg);}}