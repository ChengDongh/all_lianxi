.containers {
  width: 100%;
  height: 100vh;
  background-image: url('http://cdn.qiqiangkeji.com/20190113.0d4daf787db2bb5d8b0a8fe952bf184e_500x888.jpg');
}

.select_box {
  width: 280px;
  height: 92vh;
  margin: 0 auto;
  padding-top: 15px;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.select {
  width: 50px;
  height: 50px;
  background: orange;
  border-radius: 5px;
  text-align: center;
  line-height: 50px;
  color: white;
  float: left;
  margin: 10px;
}
