.brand {
  height: 180rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  overflow: hidden;
  background-color: white;
  border-bottom: 12rpx solid #eee;
}

.brand-logo {
  width: 100rpx;
  height: 100rpx;
  padding: 45rpx 24rpx;
}

.brand-info {
  width: 650rpx;
  display: inline-flex;
  flex-direction: column;
  overflow: hidden;
}

.brand-title {
  margin-top: 24rpx;
}

.brand-count {
  overflow: hidden;
  margin-top: -24rpx;
}
@import "/pages/component/product_table.wxss";
