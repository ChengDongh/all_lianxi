.product-buy {
  width: 100%;
  background-color: #f3244b;
  color: white;
  border-radius: 0;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.coupon {
  position:relative;
  font-size: 26rpx;
  background: #ff758f;
  height: 80rpx;
}
.couponText {
  position: absolute;
  animation:animal 2s linear alternate infinite;
  left: 0rpx;
}
@keyframes animal {
  form {
    left: 0rpx;
  }
  to {
    left: 180rpx;
  }
}
.products {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.productDetail {
  margin-bottom: 1rpx;
  width: 350rpx;
  background: #ff758f;
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  justify-content: space-between;
}
.productDetail image {
  width: 100%;
}
.productDetail .title {
  font-size: 26rpx;
  margin-top: 20rpx;
  width: 100%;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.productDetail .price {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: red;
}
.productDetail .getCoupon{
  font-size: 28rpx;
  border: 1rpx solid red;
  border-radius: 10rpx;
  color: red;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.preprice {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: red;
  text-decoration: line-through;
}