@import "/pages/component/product_table.wxss";

.btn_select {
    width: 50%;
    height:30rpx;
    background: white;
}

.filter {
  background: white;
  border-bottom: 12rpx solid #eee;
  overflow: hidden;
  align-items: center;
}

.brands {
  background: white;
  width: 100%;
  height: 162rpx;
  white-space: nowrap;
  border-bottom: 12rpx solid #eee;
}

.brand_item {
  display: inline-block;
  width: 150rpx;
  text-align: center;
  overflow: hidden;
}

.brand_item_btn {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
}

.brand_logo {
  width: 80rpx;
  height: 80rpx;
}

.brand_name {
  margin-top: 10rpx;
  text-overflow: ellipsis;
  width: 130rpx;
  text-align: center;
  margin-left: 10rpx;
  margin-right: 10rpx;
}