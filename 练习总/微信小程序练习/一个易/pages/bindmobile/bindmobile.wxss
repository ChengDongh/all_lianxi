.content {
  text-align: center;
}

.input-area {
  margin-top: 24rpx;
  background-color: #fff;
  text-align: left;
  padding-left: 24rpx;
  border-bottom: 1px solid #e0e0e0;
  border-top: 1px solid #e0e0e0;
}

.input-area input {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #353535;
}

#mobile {
  border-bottom: 1px solid #e0e0e0;
}

.smsCode {
  display: flex;
  justify-content: space-between;
  padding-right: 24rpx;
}

.smsCode input {
  width: 336rpx;
}

.smsCode .getSmsCodeBtn {
  font-size: 30rpx;
  color: #fff;
  width: 216rpx;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 10rpx;
  margin-right: 0;
}

.btn-area {
  padding: 40rpx 24rpx;
}

.btn-area button {
  color: #fff;
}

.register {
  color: #f3244b;
  font-size: 30rpx;
  float: right;
  margin-top: 32rpx;
}

.register:active {
  opacity: 0.7;
}
